<Window x:Class="CH04.StaticBindingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Static Binding Demo" Height="150" Width="400">
    <Window.Resources>
        <SolidColorBrush Color="GreenYellow" x:Key="myBrush"/>
    </Window.Resources>
    <Grid>
        <Label Background="{x:Static SystemColors.ControlDarkBrush}"
           Foreground="{StaticResource myBrush}"
           Content="Kunal Chowdhury"
           FontSize="25"
           Width="300" Height="60"
           Padding="10" Margin="10"/>
    </Grid>
</Window>
