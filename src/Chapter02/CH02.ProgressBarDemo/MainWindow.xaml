<Window x:Class="CH02.ProgressBarDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progress Bar Demo" Height="220" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Progress Indicator set at: 20%" />
        <ProgressBar Height="30"
                        Margin="0 4"
                        Minimum="0"
                        Maximum="100"
                        Value="20" />

        <TextBlock Text="Progress Indicator set at: 70%" />
        <ProgressBar Height="30"
                        Margin="0 4"
                        Minimum="0"
                        Maximum="100"
                        Value="70" />

        <TextBlock Text="Progress Indicator set at: Indeterminate" />
        <ProgressBar Height="30"
                        Margin="0 4"
                        Minimum="0"
                        Maximum="100"
                        IsIndeterminate="True" />
    </StackPanel>
</Window>
