<Window x:Class="CH05.ControlBehaviorDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:b="clr-namespace:CH05.ControlBehaviorDemo"
        Title="Control Behavior Demo" Height="100" Width="380">
    <Grid>
        <TextBlock Text="Hover to Grow the size!"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <i:Interaction.Behaviors>
                <b:GrowTextBehavior GrowBySize="10"/>
            </i:Interaction.Behaviors>
        </TextBlock>
    </Grid>
</Window>
