<Window x:Class="CH11.Win32ApiCallDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Win32 API Call Demo" Height="150" Width="500">
<StackPanel Margin="10">
    <TextBlock Text="Enter website URL:"
               Foreground="Gray"
               Margin="4 0"/>
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="address"
                 Text="http://www.kunal-chowdhury.com"
                 Width="250"
                 Margin="4"/>
        <Button x:Name="goButton"
                Content="Go..."
                Padding="8 2"
                Margin="4"
                Click="OnGoClicked"/>
        <Button x:Name="bringToFrontButton"
                Content="BringToFront"
                Padding="8 2"
                Margin="4"
                Click="OnBringToFrontClicked"/>
        <Button x:Name="refreshButton"
                Content="Refresh"
                Padding="8 2"
                Margin="4"
                Click="OnRefreshClicked"/>
    </StackPanel>
</StackPanel>
</Window>
