<Window x:Class="CH01.DialogBoxDemo.CommonDialogs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CommonDialogs" Height="280" Width="300">
    <StackPanel VerticalAlignment="Center">
        <Button Content="Open" Width="80" Height="30" Margin="4" Click="OnOpenButtonClicked"/>
        <Button Content="Save" Width="80" Height="30" Margin="4" Click="OnSaveButtonClicked"/>
        <Button Content="Print" Width="80" Height="30" Margin="4" Click="OnPrintButtonClicked"/>
        <Button Content="Font" Width="80" Height="30" Margin="4" Click="OnFontButtonClicked"/>
        <Button Content="Color" Width="80" Height="30" Margin="4" Click="OnColorButtonClicked"/>
    </StackPanel>
</Window>
